<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transfer Money</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./styles/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Transfer Money</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Transfer from <%= customer.name %></h5>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <% if (successMessage) { %>
                    <div class="alert alert-success" role="alert">
                        <%= successMessage %>
                    </div>
                <% } %>
                <form action="/transfer" method="POST">
                    <div class="mb-3">
                        <label for="receiverId" class="form-label">Select Customer to Transfer To:</label>
                        <select class="form-select" id="receiverId" name="receiverId" required>
                            <% customers.forEach(otherCustomer => { %>
                                <option value="<%= otherCustomer.id %>"><%= otherCustomer.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Amount:</label>
                        <input type="number" class="form-control" id="amount" name="amount" required>
                    </div>
                    <input type="hidden" name="senderId" value="<%= customer.id %>">
                    <button type="submit" class="btn btn-primary">Transfer</button>
                    <a href="/customers" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
